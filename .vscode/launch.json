{
  "version": "0.2.0",
  "configurations": [
    
    {
        "type": "node",
        "request": "launch",
        "name": "Run File Watch",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run",
            "watch"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Run HTTP Server",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run",
            "start"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Tests",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--experimental-vm-modules",
        "node_modules/jest/bin/jest.js"
      ],
      "console": "internalConsole"
    }
  ],
  "compounds": [
    {
      "name": "Node & Edge Debug",
      "configurations": [
        "Run File Watch",
        "Run HTTP Server",
        "Launch Edge"
      ]
    }
  ]
}