{
  "name": "lightbox2",
  "version": "2.11.5",
  "author": "Lokesh Dhakar <lokesh.dhakar@gmail.com>",
  "description": "The original Lightbox script. Uses jQuery.",
  "keywords": [
    "lightbox",
    "lightbox2",
    "overlay",
    "gallery",
    "slideshow",
    "images"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/msh9/lightbox2"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/msh9/lightbox2/blob/main/LICENSE"
    }
  ],
  "scripts": {
    "build": "npx concurrently \"npm:build:*\"",
    "build:js": "npx rollup -c rollup.config.mjs",
    "build:img": "cp src/images/* dist/images/",
    "build:css": "npx cssnano src/css/lightbox.css > dist/css/lightbox.min.css",
    "watch": "npx concurrently \"npm:watch:*\"",
    "watch:js": "npx rollup -c rollup.config.mjs -w",
    "watch:css": "npx chokidar 'src/css/**/*.css' -c 'npm run build:css'",
    "start": "http-server .",
    "lint": "npx concurrently \"npm:lint:*\"",
    "lint:js": "eslint",
    "lint:css": "stylelint \"src/css/**/*.css\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "cssnano-cli": "^1.0.5",
    "eslint": "^9.5.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jquery": "^3.7.1",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-prettier": "^5.0.0"
  }
}
